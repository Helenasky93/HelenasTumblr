<!DOCTYPE html>
<html>
  <head>
    <title>Mumblr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.default_avatar = "<%= image_url('default_avatar.png') %>"
      window.user_icon = "<%= image_url("user.svg") %>"
    </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
